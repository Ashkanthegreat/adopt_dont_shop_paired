<div id="showPetContainer">
  <img src="<%= @pet.image%>" width= "300", height= auto></img>
  <div class="showContainerText">
    <h1><%= link_to "#{@pet.name}", "/pets/#{@pet.id}", class: "siteLinks"  %></h1>
    <p>Description: <%= @pet.description %></p>
    <p>Age: <%= @pet.approximate_age %></p>
    <p>Sex: <%= @pet.sex %></p>
    <p>Shelter: <%= link_to " #{@pet.shelter.name}", "/shelters/#{@pet.shelter.id}", class: "siteLinks" %></p>
    <p>Adoption Status: <%= @pet.adoption_status %></p>
    <% if !@fav_pet %>
      <%= link_to "Favorite #{@pet.name}", "/favorites/#{@pet.id}", method: :patch %>
    <% else %>
      <%= link_to "Remove Favorite", "/favorites/#{@pet.id}", method: :delete %>
    <% end %>

    <%= link_to "Update Pet", "/pets/#{@pet.id}/edit", class: "updateLinks"  %><br>
    
    <% if @pet.adoption_status != "Pending" %>
      <%= link_to "Delete Pet", "/pets/#{@pet.id}", class: "deleteLinks", method: :delete %><br>
    <% end %>
    <%= link_to "View All Applications", "/pets/#{@pet.id}/applications/index" %>
  </div>
</div>
