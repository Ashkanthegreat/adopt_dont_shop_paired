<h1>Favorite Pets</h1>
<% @pets.each do |pet| %>
  <div class="petContainer">
    <%= image_tag(pet.image, size: "300x250") %>
    <div class="containerText">
      <p>Name:<%= link_to " #{pet.name}", "/pets/#{pet.id}", class: "siteLinks" %></p>
      <%= link_to "Remove Favorite", "/favorites/#{pet.id}",  method: :delete %>
    </div>
  </div>
<% end %>
