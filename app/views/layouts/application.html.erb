<!DOCTYPE html>
<html>
  <head>
    <title>AdoptDontShop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div id="header">
      <%= link_to "Pet Index", "/pets", class: "headerLinks" %>
      <%= link_to "Shelter Index", "/shelters", class: "headerLinks" %>
      <%= link_to "Favorite Pets: #{favorite.total_count}", "/favorites", class: "headerLinks" %>
    </div>
    <div>
      <%= image_tag("mountain_header.jpg", id: "headerPic", height: 200, width: "100%" ) %>
    </div>

    <% flash.each do |type, message| %>
      <p><%= message %></p>
    <% end %>

    <%= yield %>
  </body>
</html>
